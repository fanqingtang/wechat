/*引入index_template中的wxss  */
@import "./index_template/index_template.wxss";

page {
  background-color: #f3f3f3;
}

.container_wrapper {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  box-sizing: border-box;
  font-family: "Mirocsoft YaHei", Arial, Helvetica, sans-serif;
  background-color:#fff;
}

.header_wrapper {
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  z-index: 2;
  height: 84rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding: 0rpx 30rpx;
  line-height: 44rpx;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #fff;
}

.serach_group {
  display: flex;
  flex-flow: row nowrap;
  position: relative;
  width: 516rpx;
  height: 68rpx;
}

.search_icon {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 24rpx;
  top: 20rpx;
}

.serach_group>input {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background-color: #eee;
  border-radius: 34rpx;
  padding-left: 72rpx;
  padding-right: 24rpx;
  vertical-align: middle;
}

.search_text {
  font-family: "PingFang-SC";
  font-size: 28rpx;
  background-color: "#999999";
}

.grade_group {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 135rpx;
}

.header_grade {
  font-family: "PingFang-SC";
  width: 96rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ff7a32;
  text-align: center;
}

.down_arrow {
  width: 26rpx;
  height: 16rpx;
  margin-left: 12rpx;
}

.swiper_wrapper {
  height: 304rpx;
  padding: 98rpx 30rpx 0rpx;
}

.sowing_map_wrapper {
  width: 100%;
  height: 304rpx;
}

.sowing_img {
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
}

.filter_course_wrapper {
  display: flex;
  flex-flow: row nowrap;
  padding: 0rpx 30rpx;
  height: 68rpx;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
}

.filter_course_wrapper>text {
  font-family: "PingFang-SC";
  font-size: 28rpx;
  color: #999;
  margin-right: 62rpx;
}

.filter_course_wrapper .active_color {
  color: #ff7a32;
}

.filter_course_wrapper>text:last-child {
  margin: 0rpx;
}

/* 选择年级下拉列表页css start */

.grade_down_wrapper {
  display: flex;
  flex-flow: column nowrap;
  width: 750rpx;
  box-sizing: border-box;
  margin-top: 84rpx;
  padding: 34rpx 30rpx 50rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}

.grade_down_wrapper .all_grade, .middle_stage > text {
  font-family: "PingFang-SC";
  font-size: 30rpx;
  width: 210rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  color: #666;
  border: 1rpx solid #999;
  border-radius: 16rpx;
}

.grade_down_wrapper .middle_group {
  display: flex;
  flex-flow: column nowrap;
  margin-top: 40rpx;
}

.grade_down_wrapper .middle {
  font-family: "PingFang-SC";
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 42rpx;
}

.grade_down_wrapper .middle_stage {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  margin-top: 30rpx;
}

.grade_down_wrapper .margin_space {
  margin-top: 30rpx;
}

.grade_down_wrapper .active_grade {
  border: 1rpx solid #ff7a32;
  color: #ff7a32;
}

/* 选择年级下拉列表页css end  */

.mask_layout_wrapper {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.courseList_empty {
  font-family: "PingFangSC";
  font-size: 28rpx;
  color: #9b9b9b;
  text-align: center;
  margin-top: 242rpx;
}

.course_list_box {
  border-bottom: 1rpx solid #e5e5e5;
}

.separat_wrapper {
  display: flex;
  height: 92rpx;
  line-height: 92rpx;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  padding: 0rpx 30rpx;
  background-color: #f3f3f3;
}

.separat_line {
  display: inline-block;
  width: 160rpx;
  height: 2rpx;
  background-color: #e5e5e5;
}

.course_text {
  font-family: "PingFang-SC";
  font-size: 24rpx;
  color: #999;
  margin: 0rpx 34rpx;
}

.hideValue {
  display: none;
}
